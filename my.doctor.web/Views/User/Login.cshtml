@model UserRequest

@{
    ViewData["Title"] = "Login";
}

<main role="main">
    <br />
    <br />
    <section class="container">
        <aside class="col-sm-4">
            <h3 class="subtitle-doc">
                Login
            </h3>
            <div id="code_login_1">
                <div class="card">
                    <article class="card-body">
                        @if(ViewData["MSG_E"] != null)
                        {
                            <p class="alert alert-danger">@Html.Raw(ViewData["MSG_E"])</p>
                        }
                        <a asp-action="Index" asp-controller="Home" class="float-right btn btn-outline-primary">Sign up</a>
                        <h4 class="card-title mb-4 mt-1">Sign in</h4>
                        <form method="post">
                            <div class="form-group">
                                <label>E-mail</label>
                                <input asp-for="Login" class="form-control" placeholder="Login" type="email">
                            </div>
                            <div class="form-group">
                                <a class="float-right" href="#">Forgot?</a>
                                <label>Password</label>
                                <input asp-for="Password" class="form-control" placeholder="******" type="password">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Login </button>
                            </div>
                        </form>
                    </article>
                </div>
            </div>
        </aside>
    </section>
</main>